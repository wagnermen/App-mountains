<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/mountainsListFragment"
        android:name="com.example.touristplaces.list.MountainsListFragment"
        android:label="Mountains"
        tools:layout="@layout/fragment_mountains_list" >
        <action
            android:id="@+id/action_mountainsListFragment_to_detailMountainsFragment"
            app:destination="@id/detailMountainsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailMountainsFragment"
        android:name="com.example.touristplaces.detail.DetailMountainsFragment"
        android:label="DetailMountainsFragment" >
        <action
            android:id="@+id/action_detailMountainsFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.touristplaces.maps.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.touristplaces.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_mountainsListFragment"
            app:destination="@id/mountainsListFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>